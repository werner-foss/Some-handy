<%= form_for portfolio_item do |f| %>
  <% if portfolio_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(portfolio.errors.count, "error") %> prohibited this portfolio from being saved:</h2>

      <ul>
      <% portfolio_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class:'form-control' %>
        </div>
  
        <div class="form-group">
          <%= f.label :subtitle %>
          <%= f.text_field :subtitle, class:'form-control' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class:'form-control', rows: 10 %>
        </div>
      </div>
      <div class="col-md-12">
        <h2>Technologies Used:</h2>
        <div>
          <%= f.fields_for :technologies do |technology_form| %>
            <div class="form-group">
              <%= technology_form.label :name %>
              <%= technology_form.text_field :name, class:'form-control' %>
            </div>
          <% end %>
        </div>
        
        <div class="form-group" >
            <%= f.submit "Submit", class: 'btn btn-primary btn-block' %>
        </div>
      </div>
    </div>
  </div>
<% end %>