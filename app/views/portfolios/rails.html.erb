<div class="album text-muted">
  <div class="container">
      <div class="row">
        <% @rails_portfolio_item.each do |portfolio_item| %>
          <div class="card">
            <%= image_tag portfolio_item.main_image unless portfolio_item.thumb_image.nil? %>
            <p class="card-text">
             <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
            </p>
          </div>
        <% end %>
      </div>
  </div>
  <%= paginate @rails_portfolio_item %>
</div>