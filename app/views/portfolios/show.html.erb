<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.thumb_image, 'main'), width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <hr>
      
      <em><%= @portfolio_item.subtitle %></em>
      <p><%= @portfolio_item.body %></p>
      <hr>
      
      <h3>Technologies Used:</h3>
      
      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
      
      <% if logged_in?(:site_admin) %>
      <%= link_to "Edit", edit_portfolio_path(@portfolio_item.id), class: "btn btn-outline-warning btn-sm" %>
      <%= link_to 'Delete', portfolio_path(@portfolio_item), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-outline-danger btn-sm"%>
      <% end %>
    </div>
  </div>
</div>



