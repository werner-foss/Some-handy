<div class="col-sm-8 blog-main">
  <h2><%= @blog.title %></h2>
   <%  if logged_in?(:site_admin) %>
    <button type="button" class="btn btn-secondary"><%= link_to 'Edit', edit_blog_path(@blog) %></button>
   <% end %>
  <p><%= @blog.body %> </p>
  
  <% unless current_user.is_a? GuestUser %>
   <%= form_for @comment, url: '#' do |f|%>
    <div class="form-group">
     <%= f.text_area :content, class:'form-control', placeholder: 'Comment' %>
    </div>
    <div class="form-group">
     <%= f.submit "Post Comment", class: 'btn btn-primary btn-block' %>
    </div>
   <% end %>
  <% end %>
  
  <%= render @blog.comments %>
  
</div>