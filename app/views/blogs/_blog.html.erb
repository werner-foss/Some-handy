<div class="blog-post">
   <h2 class="blog-post-title"><%= link_to blog.title, blog %></h2>
   
   <nav class="breadcrumb">
   <%= link_to blog.topic.title, topic_path(blog.topic), class: 'breadcrumb-item'%>
   <span class="breadcrumb-item active">Published <%= distance_of_time_in_words(blog.created_at, Time.now)%> ago</span>
   <%= render partial: 'blogs/admin_actions', locals: {blog: blog} %>
  </nav>
  
   <p><%= markdown blog.body %></p>
</div>
